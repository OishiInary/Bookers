<div class="book-wrap">
<body>
<h1>Books</h1>



<table class="table"cellspacing="10">
  <thead>
   <th><b>Title</b></th>
   

   <th><b>Body</b></th>
   
 </thead>
 <tbody>
   <% @books.each do |book| %>
 <tr>
  <td><span class="book-title"><%= book.title %></span></td>
  <td><span class="book-body"><%= book.body %></span></td>
  <td><%= link_to "Show", book_path(book) %></td>
  <td><%= link_to "Edit", edit_book_path(book) %></td>
  <td><%= link_to "Destroy", book_path(book),method: :delete, "data-confirm" => "Are you sure?"  %></td>
  </tr>
<% end %>
</tbody>
</table>
</div>
<h2>New book</h2>
<div class ="errormessage">
<% if @book.errors.any? %>
  <b class="erms"><%= @book.errors.count %>errors prohibited this book from being saved:</b>
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
</div>
<div class="form">
<%= form_with model: @book, url: '/books',method: :post do |f| %>
<h4>Title</h4>
<%= f.text_field :title,class:'field' %>
<h4>Body</h4>
<%= f.text_area :body, class:'field' %>

<%= f.submit 'Create Book', class: 'create-book'%>
<% end %>
</div>
</body>